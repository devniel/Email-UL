	border-bottom:1px solid #CCC;
	font-weight:bold;
	background:#e2772c;
	color:#FFF;
	padding:5px;
	height:100%;
}
#urlWrapper {
	width:100%;
	display:block;
}
#urlWrapper #url {
	text-decoration:none;
	color:#e2772c;
}
#url:hover {
	cursor:pointer;
	text-decoration:underline;
}
a:hover {
	text-decoration:underline !important;
}
#main {
	padding:5px;
	padding-top:0px;
}
#content {

}
.button {
	display:block;
	width:100px;
	height:30px;
	line-height:30px;
	font-weight:bold;
	text-decoration:none;
	color:#FFF;
	text-align:center;
	border-radius:3px;
	-webkit-box-shadow:0px 0px 2px #CCC;
	background:#e2772c;
	margin-top:5px;
	margin-left:90px;
}
.button:hover {
	cursor:pounter;
}
</style>
</head>
<body>
<div id="header">
	Ulima Email Notifications
</div>
